
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="/Content/AdminTemplete/source/assets/plugins/steps/steps.css">

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-right">
                    <div class="page-title">A10 فورم</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-left">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                           href="#">کورپاڼه</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">نوی فورم</li>

                </ol>
            </div>
        </div>
        <style>
            ::-webkit-input-placeholder {
                color: peachpuff;
                font-size: 25px;
                font-family: jam;
            }
            ::-moz-placeholder {
                color: peachpuff;
                font-size: 25px;
                font-family: jam;
            }
            :-ms-input-placeholder {
                color: peachpuff;
                font-size: 25px;
                font-family: jam;
            }
            ::placeholder {
                color: peachpuff;
                font-size: 25px;
                font-family: jam;
            }


            #customers {
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: separate;
                width: 100%;
            }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }
            td {
                font-family: jam;
                font-size: 25px;
            }
            

            #customers tr:hover {
                background-color: #ddd;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #6673FC;
                color: white;
                font-size: 20px
            }
            h3 {
                text-align: center;
                font-family: jam;
                            }
        </style>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <form method="post" action="@Url.Action("Create", "A10Form")"  enctype="multipart/form-data">

                        <h3>ساختمانی مواد</h3>
                        @if (ViewBag.Message != null)
                        {
                            <script type="text/javascript">
                                        alert(@ViewBag.Message)
                            </script>
                        }
                        <section>
                            @Html.Partial("_SakhtamaneMawadPartial")
                        </section>
                        <h3>د عراده جاتو تیل</h3>
                        <section>
                            @Html.Partial("_AradaJatPartial")
                        </section>
                        <h3>کرایه</h3>
                        <section>
                            @Html.Partial("_KarayaPartial")
                        </section>
                        <h3>مصرفی منفرقه مواد</h3>
                        <section>
                            @Html.Partial("_MasrafeMotafaroqaMawadPartial")
                        </section>
                        <h3>د موټر ترمیم او نور وسایل</h3>
                        <section>
                            @Html.Partial("_MotarTarmimPartial")
                        </section>
                        <h3>د ماشینری کرایه</h3>
                        <section>
                            @Html.Partial("_MashenarePartial")
                        </section>
                        <h3>د ساحوی دفتر معاشات او کرایه</h3>
                        <section>
                            @Html.Partial("_SahaweDafterMashatPartial")
                        </section>
                        <h3>د نن ورځی قرض</h3>
                        <section>
                            @Html.Partial("_DaNanWrazeQarzPartial")
                        </section>
                        <h3>دکار د پرمختګ جدول</h3>
                        <section>
                            @Html.Partial("_DaKarParmakhtagPartial")
                        </section>
                        <h3>مرکزی دفتر ته پیشنهادات</h3>
                        <section>
                            <div class="col-lg-6" style="float:right">
                                <div class="col-sm-4 " style="display: inline">
                                    <input type="text" name="FormNumber" class="form-control" placeholder="د فورم نمبر"/>
                                </div>
                                <div class="col-sm-4" style="display: inline">
                                    <input type="text" name="Day" class="form-control"placeholder="ورځ" />
                                </div>
                                <div class="col-sm-4" style="display: inline">
                                    <input type="text" name="FinentialOfficer" class="form-control" placeholder="مالی امر نوم"/>
                                </div>
                            </div>
                            <div class="col-lg-6" style="float: left">
                                <textarea name="Comments" rows="10" cols="10" class="form-control" placeholder="پیشرفت،مشکلات،موانع،او یا هم پيشنهادات و مرکزی دفتر ته ولیکی"></textarea>

                            </div>
                            </section><hr/>
                        <h3>د اجناسو د رانیولو شواهد یا بیلونه</h3>
                        <section>

                            <div class="card-body" id="bar-parent">
                                <input type="file" class="form-control" name="files" multiple />
                            </div>
                        </section>
                        <input type="submit" class="btn btn-primary"/>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="/Content/AdminTemplete/source/assets/plugins/jquery-validation/js/jquery.validate.min.js"></script>

    <!-- steps -->
    <script src="/Content/AdminTemplete/source/assets/plugins/steps/jquery.steps.js"></script>
    <script src="/Content/AdminTemplete/source/assets/js/pages/steps/steps-data.js"></script>
    <script>
        function calculateTotalPrice(pricePerUnit, totalstr, quantitystr) {
            document.getElementById(totalstr).value = document.getElementById(quantitystr).value * pricePerUnit;
        }
        function calculateTotalWork(pricePerUnit, totalstr, quantitystr) {
            document.getElementById(totalstr).value = parseInt(document.getElementById(quantitystr).value) + parseInt(pricePerUnit);
        }

    </script>


}
