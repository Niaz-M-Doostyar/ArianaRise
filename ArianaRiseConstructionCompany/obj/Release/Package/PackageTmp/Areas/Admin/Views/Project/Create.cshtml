@model ArianaRiseConstructionCompany.Models.Db.tbl_projects

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-right">
                    <div class="page-title">نوی پروژی جوړول</div>
                </div>
            </div>
        </div>
        <style>
            .info-box-text {
                font-size: 24px;
                color: black;
                text-decoration: double
            }

            .page-footer {
                position: absolute;
                bottom: 0;
                width: 100%
            }
        </style>

        <div class="row">
            <div class="col-xl-6 col-md-12 col-12">



                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>پروژی</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2",style="text-align: right" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2", style = "text-align: right" })
                            <div class="col-md-10">
                                <select name="Location" class="form-control">
                                        <option>None</option>
                                        <option>Badakhshan</option>
                                        <option>Badghis</option>
                                        <option>Baghlan</option>
                                        <option>Bamyan</option>
                                        <option>Farah</option>
                                        <option>Faryab</option>
                                        <option>Ghazni</option>
                                        <option>Ghor</option>
                                        <option>Helmand</option>
                                        <option>Herat</option>
                                        <option>Kabul</option>
                                        <option>Kapisa</option>
                                        <option>Logar</option>
                                        <option>Nangarhar</option>
                                        <option>Nimroz</option>
                                        <option>Kandahar</option>
                                        <option>Kunduz</option>
                                        <option>Takhar</option>
                                        <option>Wardak</option>
                                        <option>Zabul</option>
                                        <option>Paktika</option>
                                        <option>Balkh</option>
                                        <option>Jowzjan</option>
                                        <option>Samangan</option>
                                        <option>Sar-e Pul</option>
                                        <option>Kunar</option>
                                        <option>Laghman</option>
                                        <option>Paktiya</option>
                                        <option>Khost</option>
                                        <option>Nuristan</option>
                                        <option>Uruzgan</option>
                                        <option>Parwan</option>
                                        <option>Daykundi</option>
                                        <option>Panjshayr</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to list", "Index")
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
