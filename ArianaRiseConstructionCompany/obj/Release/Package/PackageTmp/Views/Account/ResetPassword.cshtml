@model ArianaRiseConstructionCompany.Models.Db.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-right">
                    <div class="page-title">پاسورډ تبدیلول</div>
                </div>
            </div>
        </div>
        <style>
            .info-box-text {
                font-size: 24px;
                color: black;
                text-decoration: double
            }

            .page-footer {
                position: absolute;
                bottom: 0;
                width: 100%
            }
        </style>

        <div class="row">

            <div class="col-xl-6 col-md-12 col-12">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>پاسورډ تفیر کړی</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label",style="text-align: right" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label", style = "text-align: right" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label", style = "text-align: right" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Reset" />
                        </div>
                    </div>
                }

                

            </div>
            <div class="col-xl-6 col-md-12 col-12">
                @if (ViewBag.Message != null)
                {
                    <h3>@ViewBag.Message</h3>
                }
                @Html.ValidationSummary("", new {@class = "text-danger"})
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}